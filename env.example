# ==============================================
# COLORADO CAREASSIST - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env.local for local development
# Set these as Config Vars in Heroku for production

# -----------------------------
# CONTACT FORM (BREVO/SENDINBLUE)
# -----------------------------
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key_here

# Email addresses for contact form
CONTACT_TO_EMAIL=care@coloradocareassist.com
CONTACT_FROM_EMAIL=noreply@coloradocareassist.com
CONTACT_FROM_NAME=Colorado CareAssist Website

# -----------------------------
# TAWK.TO LIVE CHAT
# -----------------------------
NEXT_PUBLIC_TAWK_ENABLED=true
NEXT_PUBLIC_TAWK_PROPERTY_ID=your_tawk_property_id
NEXT_PUBLIC_TAWK_WIDGET_ID=your_tawk_widget_id

# -----------------------------
# TRUSTPILOT REVIEWS
# -----------------------------
NEXT_PUBLIC_TRUSTPILOT_ENABLED=true
NEXT_PUBLIC_TRUSTPILOT_BUSINESS_UNIT_ID=your_trustpilot_business_unit_id

# -----------------------------
# ANALYTICS & TRACKING
# -----------------------------
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Google Tag Manager (preferred) OR Google Analytics 4
# Use GTM if you have it, otherwise use GA4
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
# NEXT_PUBLIC_GA4_ID=G-XXXXXXXXXX

# Meta (Facebook) Pixel
NEXT_PUBLIC_META_PIXEL_ID=your_meta_pixel_id

# -----------------------------
# SITE CONFIGURATION
# -----------------------------
NEXT_PUBLIC_SITE_URL=https://coloradocareassist.com

